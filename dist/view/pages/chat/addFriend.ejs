<%- contentFor('body') %>
<%- include('../../layouts/header') %>
<div class="content col-10">
    <%- include('../../layouts/header-af.ejs') %>

    <div class="row box-content">

        <div class="chat-area">

            <div class="chat-content">

                <div class="search-container add-friend-container" form-add-friend my_id="<%= user._id%>">
                    
                        <input type="text" placeholder="Search friends" class="search-input add-friend">
                        <button type="button" class="button-friend" onclick="searchFunc()"> 
                            <span>Search</span>
                            <i class="fa fa-search"></i>
                        </button>
                </div>
                <% for(let item of record){ %>
                    <div class="friend-item" user-friend="<%= item._id%>">
                        <div class="row">
                            <i class="fa fa-user col-1" aria-hidden="true"></i>
                            <div class="friend-name col-9">
                                <div class="" style="font-size: 1.1rem;color: white;;"><%= item.fullName%></div>
                                <div class="" style="font-size: 0.9rem;">Offline</div>
                            </div>
                            <div class="col-2" style="
                            display: flex;
                            justify-content: space-evenly;
                            text-align: center;
                            align-items: center;
                            
                        ">  
                                    <a class="circle-back" role="button" onclick="addFr()" button-add-fr>
                                        <i class="fa fa-user-plus" aria-hidden="true" ></i>    
                                    </a>
                                    
                                
                            </div>
                        </div>
                    </div>
                    <%}%>
            </div>
        </div>



        
    </div>
    <!-- <script src="/scriptjs/friend.js"></script> -->

