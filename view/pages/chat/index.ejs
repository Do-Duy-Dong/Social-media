<%- contentFor('body') %>
<%- include('../../layouts/header') %>
        <div class="content col-10">
        <!-- Header -->
        <div class="header">
            <div class="user-section" room-id="<%= room_id%>">
                <div class="user-avatar"></div>
                <span class="user-name"><%= user2.fullName %></span>

            </div>

            <div class="icon-section">
                <i class="fa fa-phone"></i>
                <i class="fa fa-video-camera" aria-hidden="true"></i>
    
                <div class="search-container">
                    <input type="text" placeholder="Search" class="search-input">
                    <i class="fa fa-search"></i>
                </div>
            </div>
        </div>
        
        <!-- COntent -->
        <div class="row box-content">
    
            <div class="chat-area col-8">
    
                <div class="chat-content" >
                    <% for (let item of chat) { %>
                        <%if(item.content){%>
                        <div class="message <%= user._id == item.sender ? 'right' : 'left' %>">
                            <div class="bubble">
                                <%= item.content %>
                                    <div class="time">20:06</div>
                            </div>
                        </div>
                    
                        <% } %>
                        <% } %>
                </div>
    
    
                <form form-chat>
                    <div class="chat-footer">
                        <input id="input-chat" type="text" placeholder="Nhập tin nhắn..."
                            style="flex: 1; padding: 5px;">
                        <div class="custom-file-container" data-upload-id="upload-img"></div>
                        <label for="file-upload-with-preview-upload-img">
                            <i class="fa fa-picture-o" aria-hidden="true" role="button" type="button"></i>
                        </label>
                        <button type="submit">Gửi</button>
                    </div>
                </form>
            </div>
    
    
            <!-- Thông tin hội thoại -->
            <div class="info-panel col-4">
                <div class="container-profile">
                    <div class="header-profile" style="height: 136px;"></div>
                    
                    <div class="profile-section" style="background-color: #23272a;">
                      <div class="avatar-container">
                        <div class="avatar-profile">
                          <%if(user2.avatar){%>
                          <img src="<%= user2.avatar%>" class="img-profile">
                          <%}else{%>
                            <div class="img-profile"></div>
                            <%}%>
                        </div>
                        <div class="status-indicator" style="background-color: #5f5f5f;"></div>
                      </div>
                      
                      <div class="username-section" style="margin-left: 125px; padding: 0;">
                        <span class="username-profile"><%= user2.fullName%></span>
                      </div>
                              
                    </div>
                  </div>
            </div>
        </div>
    
        <script type="module">
            
          </script>
    </div>
    
    
   